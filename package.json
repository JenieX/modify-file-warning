{
    "name": "modify-file-warning",
    "displayName": "Modify File Warning",
    "description": "Useful when modify file under node_modules accidentally",
    "publisher": "YuTengjing",
    "version": "0.0.1",
    "icon": "images/logo.png",
    "engines": {
        "vscode": "^1.69.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tjx666/modify-file-warning"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Modify File Warning",
            "properties": {
                "modifyFileWarning.includedFileGlobs": {
                    "title": "glob array define which files should warn when modify",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "modifyFileWarning.excludedFileGlobs": {
                    "title": "exclude files defined in modifyFileWarning.includedFileGlobs",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "modifyFileWarning.enableNvmrcCheck": {
                    "title": "will notify you to update your .nvmrc when version in .nvmrc in not the same in you shell environment",
                    "type": "boolean",
                    "default": false
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.69.0",
        "@types/glob": "^7.2.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.30.6",
        "@typescript-eslint/parser": "^5.30.6",
        "eslint": "^8.20.0",
        "typescript": "^4.7.4"
    }
}
