{
    "name": "modify-file-warning",
    "displayName": "Modify File Warning",
    "description": "Useful when modify file under node_modules accidentally",
    "publisher": "YuTengjing",
    "version": "0.1.0",
    "icon": "images/logo.png",
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tjx666/modify-file-warning"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Modify File Warning",
            "properties": {
                "modifyFileWarning.includedFileGlobs": {
                    "title": "glob array define which files should warn when modify",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "modifyFileWarning.excludedFileGlobs": {
                    "title": "exclude files defined in modifyFileWarning.includedFileGlobs",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "modifyFileWarning.validateCostThreshold": {
                    "title": "will notify warning when validate a file cost longer then this threshold, unit is ms",
                    "type": "number",
                    "default": 100
                },
                "modifyFileWarning.enableNvmrcCheck": {
                    "title": "will notify you to update your .nvmrc when version in .nvmrc in not the same in you shell environment",
                    "type": "boolean",
                    "default": false
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm esbuild:base --minify",
        "clear": "rimraf ./out",
        "esbuild:base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild:watch": "pnpm esbuild:base --sourcemap --watch",
        "compile:test": "pnpm clear && tsc -p ./test/tsconfig.json",
        "lint": "eslint src --ext ts",
        "test": "pnpm compile:test && node ./out/test/runTests.js",
        "package": "vsce package --no-dependencies",
        "publish": "vsce publish --no-dependencies"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/minimatch": "5.1.2",
        "@types/node": "16.11.46",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "esbuild": "^0.15.12",
        "eslint": "^8.27.0",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "minimatch": "5.1.0"
    }
}
